@model IEnumerable<OfficeDto>
@using EmployeeManagementSystemDataService.Models
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <body>
        <button class="btn alert-success" onclick="AddOffice()">
            Add New
        </button>
        <br />
        <br />
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Company name</th>
                    <th scope="col">Country</th>
                    <th scope="col">City</th>
                    <th scope="col">Street</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var office in Model)
                {
                    var companyIsDeleted = office.CompanyIsDeleted;
                    <tr>
                        @if (office.IsDeleted == false && companyIsDeleted == false)
                        {

                            <td>@office.CompanyName </td>
                            <td>@office.CountryName</td>
                            <td>@office.CityName</td>
                            <td>@office.Street, @office.StreetNumber </td>
                            <td>

                                <button class="btn alert-success" onclick="window.location.href='@Url.Action("Edit", "Office", office)'">
                                    Edit
                                </button>
                                <button class="btn alert-success" onclick="window.location.href='@Url.Action("Delete", "Office", office)'">
                                    Delete
                                </button>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
        <strong>
            <a style="color:mediumseagreen" href="javascript:history.go(-1)" title="Go to previous page" class="goback">Go back</a>
        </strong>
    </body>





