@model OfficeViewModel
@{
    ViewData["Title"] = "Add Office";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
    <div class="row">
        <form id="account" method="post">
            <input asp-for="Id" hidden />
            <div class="col-xs-3">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Street"></label>
                    <input asp-for="Street" class="form-control" required minlength="3" maxlength="50" />
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="StreetNumber"></label>
                    <input asp-for="StreetNumber" class="form-control" required min="1" />
                    <span asp-validation-for="StreetNumber" class="text-danger"></span>
                </div>
            </div>
            <br />
            <label>Choose Company:</label>
            <div class="select">
                <select required asp-for="CompanyId"
                        asp-items="@(new SelectList(Model.AllCompanies,"Id","Name"))">
                    <option value="">None</option>
                    <option>Select Company</option>
                </select>
            </div>
            <br />
            <label>Choose Country:</label>
            <div class="select">
                <select required asp-for="CountryId"
                        asp-items="@(new SelectList(Model.AllCountries,"Id","Name"))"
                        onchange="populateCities(event.srcElement.value, 'CityId')">
                    <option value="">None</option>
                    <option>Select Country</option>
                </select>
            </div>
            <br />
            <label>Choose City:</label>
            <div class="select">
                <select required asp-for="CityId"
                        asp-items="@(new SelectList(Model.CitiesByCountry,"Id","Name"))">
                    <option value="">None</option>
                    <option>Select City</option>
                </select>
            </div>
            <br />
            <br />
            <div class="form-group">
                <button type="submit" class="btn alert-success">Save</button>
                <strong>
                    <a style="color:mediumseagreen" href="javascript:history.go(-1)" title="Go to previous page" class="goback">Go back</a>
                </strong>
            </div>

        </form>
    </div>
</body>


