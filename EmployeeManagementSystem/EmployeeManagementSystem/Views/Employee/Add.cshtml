@model EmployeViewModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <form id="account" method="post">
        <input asp-for="Id" hidden />

        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" required />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" required />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="select">
            <select asp-for="ExperienceEmployee">
                <option selected disabled>Choose an option experience level</option>
                <option value="1">Junior</option>
                <option value="2">Middle</option>
                <option value="3">Senior</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="VacationDays"></label>
            <input asp-for="VacationDays" class="form-control" required />
            <span asp-validation-for="VacationDays" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Salary"></label>
            <input asp-for="Salary" class="form-control" required />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
        <select asp-for="OfficeId"
                asp-items="@(new SelectList(Model.AllCompanies,"Id","Name"))">
            <option>Select Office</option>
        </select>

        <select asp-for="CompanyId"
                asp-items="@(new SelectList(Model.AllCompanies,"Id","Name"))">
            <option>Select Company</option>
        </select>

        <select asp-for="CountryId"
                asp-items="@(new SelectList(Model.AllCountries,"Id","Name"))"
                onchange="populateCities(event.srcElement.value, 'CityId')">
            <option>Select Country</option>
        </select>

        <select asp-for="CityId"
                asp-items="@(new SelectList(Model.CitiesByCountry,"Id","Name"))">
            <option>Select City</option>
        </select>
        <br />
        <br />
        <div class="form-group">
            <button type="submit" class="btn alert-success">Save</button>
        </div>
    </form>
</body>


