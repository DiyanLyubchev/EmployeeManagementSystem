@model EmployeViewModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div class="row">
        <form id="account" method="post">
            <input asp-for="Id" hidden />

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="select">
                <select asp-for="ExperienceEmployee">
                    <option selected disabled>Choose an option experience level</option>
                    <option value="1">Junior</option>
                    <option value="2">Middle</option>
                    <option value="3">Senior</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="VacationDays"></label>
                <input asp-for="VacationDays" class="form-control" />
                <span asp-validation-for="VacationDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salary"></label>
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <select asp-for="CompanyId"
                    asp-items="@(new SelectList(Model.AllCompanies,"Id","Name"))"
                onchange="populateOffices(event.srcElement.value, 'OfficeId')">
                <option>Select Company</option>
            </select>
            <select asp-for="OfficeId"
                    asp-items="@(new SelectList(Model.AllOfficies,"Id","Street"))">
                <option>Select Office</option>
            </select>


            <br />
            <br />
            <div class="form-group">
                <button type="submit" class="btn alert-success">Save</button>
                <strong>
                    <a style="color:mediumseagreen" href="javascript:history.go(-1)" title="Go to previous page" class="goback">Go back</a>
                </strong>
            </div>

        </form>

    </div>
</body>


